@model Blog.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="form-heading">login Form</h1>
<div class="login-form">
    <div class="main-div">
        <div class="panel">
            <h2>Admin Login</h2>
            <p>Please enter your email and password</p>
        </div>
        <form asp-controller="Account" asp-action="Login" id="Login">
            <div class="form-group">
                <input type="email" asp-for="@Model.Username" class="form-control" id="inputEmail" placeholder="Email Address">
            </div>
            <div class="form-group">
                <input type="password" asp-for="@Model.Password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
            <div class="forgot">
                <a href="reset.html">Forgot password?</a>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
    <p class="botto-text"> Designed by Sunil Rajput</p>
</div>