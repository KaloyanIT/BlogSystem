@model Blog.ViewModels.FrontEnd.HeaderViewModel

<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>@Model.Title</h1>
                    <span class="subheading">@Model.SubTitle</span>
                    @if (Model.CreationDate.HasValue)
                    {
                        <span class="meta">
                            Posted by
                            <a href="#">@Model.Author</a>
                            on @Model.CreationDate.Value.ToString("dd MMMM, yyyy")
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>
</header>