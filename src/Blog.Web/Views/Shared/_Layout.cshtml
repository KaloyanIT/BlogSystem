<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="~/dist/allstyles.css" />

    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="~/css/blog-theme/clean-blog.css" rel="stylesheet">

    @*<link rel="stylesheet" href="~/StaticFiles/dist/bundle.css" asp-append-version="true" />s*@

    @RenderSection("Styles", required: false)

    <title>@ViewData["Title"]</title>
    @RenderSection("ScriptsHead", required: false)
</head>
<body>
    <!-- Navigation -->
    @await Html.PartialAsync("_Navigation")

    <!-- Page Header -->
    @await Html.PartialAsync("_Header")

    <div class="container">
        @RenderBody()
    </div>

    <!--   Footer -->
    @await Html.PartialAsync("_Footer")

    <script src="~/StaticFiles/dist/bundle.js" asp-append-version="true"></script>

    @RenderSection("ScriptsBody", required: false)
</body>
</html>