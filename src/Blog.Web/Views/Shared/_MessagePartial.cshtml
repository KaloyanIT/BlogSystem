@using Blog.Infrastructure.Constants

@if (TempData[MessagesConstants.TempDataSuccessMessageKey] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData[MessagesConstants.TempDataSuccessMessageKey]
    </div>
}

@if (TempData[MessagesConstants.TempDataErrorMessageKey] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData[MessagesConstants.TempDataErrorMessageKey]
    </div>
}

@if (TempData[MessagesConstants.TempDataWarningMessageKey] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData[MessagesConstants.TempDataWarningMessageKey]
    </div>
}