@model ICollection<Blog.Core.ViewModels.Blogs.BlogViewModel>

@foreach (var blog in Model)
{
    <div class="col-md-4">
        <div class="item-box-blog">
            <div class="item-box-blog-image">
                <!--Date-->
                <div class="item-box-blog-date bg-blue-ui white"> <span class="mon">@blog.DateCreated</span> </div>
                <!--Image-->
                <figure> <img alt="" src="https://cdn.pixabay.com/photo/2017/02/08/14/25/computer-2048983_960_720.jpg"> </figure>
            </div>
            <div class="item-box-blog-body">
                <!--Heading-->
                <div class="item-box-blog-heading">
                    <a href="#" tabindex="0">
                        <h5>@blog.Title</h5>
                    </a>
                </div>
                <!--Data-->
                <div class="item-box-blog-data" style="padding: px 15px;">
                    <p><i class="fa fa-user-o"></i> Admin, <i class="fa fa-comments-o"></i> Comments(3)</p>
                </div>
                <!--Text-->
                <div class="item-box-blog-text">
                    <p>Lorem ipsum dolor sit amet, adipiscing. Lorem ipsum dolor sit amet, consectetuer adipiscing. Lorem ipsum dolor sit amet, adipiscing. Lorem ipsum dolor sit amet, adipiscing. Lorem ipsum dolor sit amet, consectetuer adipiscing. Lorem ipsum dolor.</p>
                </div>
                <div class="mt"> <a href="@Url.Action("Details", "Blog", new { id = blog.Id })" tabindex="0" class="btn bg-blue-ui white read">read more</a> </div>
                <!--Read More Button-->
            </div>
        </div>
    </div>
}

