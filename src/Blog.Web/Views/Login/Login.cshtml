@model LoginViewModel
@{ ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

@await Component.InvokeAsync("Header", new { Title = "Login", SubTitle = "" })


<div class="container">
    <div class="col-md-6 mx-auto">
        <h1>Login</h1>
        <form asp-controller="Login" asp-action="Login" id="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            @*<div asp-validation-summary="All" class="text-danger"></div>s*@
            <div class="form-group">
                <input type="email" asp-for="@Model.Username" class="form-control" id="inputEmail" placeholder="Email Address">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="@Model.Password" class="form-control" id="inputPassword" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
            @*<div>
                <a class="stretched-link" asp-action="ForgotPassword" asp-controller="Password">Forgot password?</a>
            </div>*@
            <br />
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>