@using Blog.ViewModels.BackEnd.Emails.MailLists;
@using Blog.Infrastructure.Pager;
@using Blog.Controllers.ViewComponents;

@model PagedResult<MailListViewModel>

@{
    ViewData["Title"] = "Mail Lists";
}


<div class="row">
    <a class="btn btn-primary" role="button" asp-action="Create">Create</a>
</div>
<div class="row">
    <div class="col-10">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th>Date Modified</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ var i = 1; }
                @foreach (var item in Model.Results)
                {
                    var rowNo = (Model.CurrentPage - 1) * Model.PageSize + i;
                    i++;
                <tr>
                    <td>@rowNo</td>
                    <td>@Html.DisplayFor(model=> item.Name)</td>
                    <td>@Html.DisplayFor(model => item.Description)</td>
                    <td>@Html.DisplayFor(model => item.DateCreated)</td>
                    <td>@Html.DisplayFor(model => item.DateModified)</td>
                    <td>
                        <a class="btn btn-warning btn-sm" role="button" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" role="button" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

        @(await Component.InvokeAsync<PagerViewComponent>(Model))
    </div>
</div>

