@using Blog.Controllers.ViewModels.Admin.Emails.MailLists;
@using Blog.Infrastructure.Pager;
@using Blog.Controllers.ViewComponents;

@model PagedResult<MailListViewModel>

@{
    ViewData["Title"] = "Mail Lists";
}

<h2>Entity Framwork Core pager example</h2>
<div class="row">
    <div class="col-md-5">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First name</th>
                    <th>Last name</th>
                    @*<th>E-mail</th>*@
                </tr>
            </thead>
            <tbody>
                @{ var i = 1; }
                @foreach (var contact in Model.Results)
                {
                    var rowNo = (Model.CurrentPage - 1) * Model.PageSize + i;
                    i++;
                    <tr>
                        <td>@rowNo</td>
                        <td>@contact.Name</td>
                        <td>@contact.Description</td>
                        @*<td>@contact.Email</td>*@
                    </tr>
                }
            </tbody>
        </table>

        @(await Component.InvokeAsync<PagerViewComponent>(Model))
    </div>
</div>

